<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="res_users_inherit_form_view" model="ir.ui.view">
            <field name="name">res.users.inherit</field>
            <field name="model">res.users</field>
            <field name="inherit_id" ref="base.view_users_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='company_id']" position="after">
                    <field name="warehouse_ids" widget="many2many_tags" domain="['|','|','|',('company_id','=',company_id),('company_id','child_of',company_id),('company_id','child_of',company_ids),('company_id','in',company_ids)]"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>